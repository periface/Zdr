
<form name="zdrCreateForm" novalidate>
    <div class="modal-header">
        <h4 class="modal-title">
            <span>Crear Zona</span>
        </h4>
    </div>
    <div class="modal-body">

        <div class="row">
            <div class="col-sm-12 form-group">
                <textarea required class="form-control" ng-model="vm.zdr.Content" placeholder="Comentario"></textarea>
            </div>
            <div class="col-sm-6 form-group">
                <label class="control-label">
                    Imagenes
                </label><br/>
                <div class="btn btn-default btn-xs" ngf-select ng-model="vm.files" name="file" ngf-pattern="'image/*'"
                     ngf-accept="'image/*'" ngf-multiple="true" ngf-max-size="20MB" ngf-min-height="100"
                     ngf-resize="{width: 100, height: 100}">Seleccionar Imagenes</div><br/><br/>
                {{vm.files.length}} Imagenes seleccionadas
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-12">
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:{{vm.percent}}%">
                        <span class="sr-only">{{vm.percent}} Complete</span>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
        <button type="submit" class="btn btn-primary blue" ng-disabled="tenantCreateForm.$invalid" ng-click="vm.addZdr()"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
    </div>
</form>